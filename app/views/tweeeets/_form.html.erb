<%= simple_form_for(@tweeeet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tweeeet, label: "Twittear", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Escribe un nuevo tweet..."  %>
  </div>
</div>
<%= f.button :submit, class: "button is-info", value: 'Twittear' %>
<% end %>