<div class="column is-half">
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/64x64.png" alt="">
			</p>
		</figure>
		<div class="media-content">
		<%= render 'tweeeets/form'%>
		</div>
	</article>

<% @tweeeets.each do |tweeeet| %>
	<div class="box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64x64">
					<img src="https://bulma.io/images/placeholders/64x64.png" alt="">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<strong>Jennifer Matamala</strong> <br>
					<small>@jmatam5k</small>
					<p><%= tweeeet.tweeeet %></p>
				</div>
				<div class="level">
					<div class="level-left is-mobile">
						<%= link_to tweeeet, class: "level-item" do %>
						<span class="icon">
							<i class="fa fa-link" aria-hidden="true"></i>
						</span>
						<% end %>
						<%=  link_to edit_tweeeet_path(tweeeet), class:"level-item" do %>
							<span class="icon">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</span>
						<% end %>
						<%= link_to tweeeet, method: :delete, data: {confirm: "¿Estás seguro de borrar este tweet?"} do%>
							<span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
						<% end %>
					</div>
				</div>
			</div>
		</article>
	</div>
<% end %>
</div>